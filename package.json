{
  "name": "ado-review-cli",
  "version": "1.0.25",
  "description": "Azure DevOps PR Review CLI - AI Agent supported CLI tool for automated Pull Request reviews",
  "main": "dist/cli/index.js",
  "bin": {
    "ado-review": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-config",
    "copy-config": "mkdir -p dist/config && cp src/config/*.yaml dist/config/",
    "dev": "ts-node src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "review": "node dist/cli/index.js review",
    "dev:review": "ts-node src/cli/index.ts review",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "azure-devops",
    "pull-request",
    "code-review",
    "cli",
    "ai",
    "gemini",
    "typescript",
    "azure"
  ],
  "author": "AI Agent",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "axios": "^1.6.2",
    "chalk": "^5.6.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "inquirer": "^12.0.0",
    "js-yaml": "^4.1.0",
    "ora": "^7.0.1",
    "simple-git": "^3.20.0",
    "tmp": "^0.2.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@types/tmp": "^0.2.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "files": [
    "dist/**/*",
    "examples/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/ado-review-cli.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ado-review-cli/issues"
  },
  "homepage": "https://github.com/your-org/ado-review-cli#readme"
}
